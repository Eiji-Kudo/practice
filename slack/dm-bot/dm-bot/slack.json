{
  "app": {
    "id": "your_app_id",
    "name": "your_app_name"
  },
  "manifest": {
    "display_information": {
      "name": "your_app_name"
    },
    "features": {
      "bot_user": {
        "display_name": "your_bot_display_name",
        "always_online": false
      }
    },
    "oauth_config": {
      "scopes": {
        "bot": [
          "chat:write",
          "im:write"
        ]
      }
    },
    "settings": {
      "interactivity": {
        "is_enabled": true
      },
      "org_deploy_enabled": false,
      "socket_mode_enabled": true,
      "token_rotation_enabled": false
    }
  }
}